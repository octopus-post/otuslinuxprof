# ============================== Filebeat inputs ===============================
filebeat.inputs:
- type: filestream
  paths:
    - /var/log/nginx/*.log

  enabled: true
  exclude_files: ['.gz$']
  prospector.scanner.exclude_files: ['.gz$']

output.logstash:
  hosts: ["{{ hostvars['elk']['ansible_host'] }}:5400"]
